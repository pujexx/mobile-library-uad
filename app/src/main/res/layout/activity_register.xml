<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gausian_library"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"></View>

                <com.pujexx.mlibraryuad.custom.EditTextHelvetica
                    android:id="@+id/editText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/input_background_transparent"
                    android:hint="Nomor Identitas"
                    android:padding="10dp"
                    android:textColor="#fff"
                    android:singleLine="true"
                    android:textColorHint="#ffdedede"
                    android:textSize="9pt" />

                <com.pujexx.mlibraryuad.custom.EditTextHelvetica
                    android:id="@+id/editText2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/input_background_transparent"
                    android:hint="Nama Lengkap"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="#fff"
                    android:textColorHint="#ffdedede"
                    android:textSize="9pt" />

                <com.pujexx.mlibraryuad.custom.EditTextHelvetica
                    android:id="@+id/editText3"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/input_background_transparent"
                    android:hint="Alamat asal"
                    android:padding="10dp"
                    android:textColor="#fff"
                    android:gravity="start"
                    android:textColorHint="#ffdedede"
                    android:textSize="9pt" />

                <com.pujexx.mlibraryuad.custom.EditTextHelvetica
                    android:id="@+id/editText4"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:singleLine="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/input_background_transparent"
                    android:hint="Email"
                    android:padding="10dp"
                    android:textColor="#fff"
                    android:textColorHint="#ffdedede"
                    android:textSize="9pt" />

                <com.pujexx.mlibraryuad.custom.EditTextHelvetica
                    android:id="@+id/editText7"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:background="@drawable/input_background_transparent"
                    android:hint="Telp"
                    android:padding="10dp"
                    android:textColor="#fff"
                    android:textColorHint="#ffdedede"
                    android:textSize="9pt" />

                <com.pujexx.mlibraryuad.custom.EditTextHelvetica
                    android:id="@+id/editText5"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:singleLine="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/input_background_transparent"
                    android:hint="Username"
                    android:padding="10dp"
                    android:textColor="#fff"
                    android:textColorHint="#ffdedede"
                    android:textSize="9pt" />

                <com.pujexx.mlibraryuad.custom.EditTextHelvetica
                    android:id="@+id/editText6"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/input_background_transparent"
                    android:hint="Password"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="#fff"
                    android:textColorHint="#ffdedede"
                    android:textSize="9pt" />

                <com.pujexx.mlibraryuad.custom.EditTextHelvetica
                    android:id="@+id/editText10"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:singleLine="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/input_background_transparent"
                    android:hint="Retype Password"
                    android:padding="10dp"
                    android:textColor="#fff"
                    android:textColorHint="#ffdedede"
                    android:textSize="9pt" />
                <com.pujexx.mlibraryuad.custom.ButtonHelvetica
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/button_primary"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="Register"
                    android:textColor="#fff"
                    android:textSize="9pt" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/btn_register_back"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/drawer_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/register_back_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerInside"
                android:src="@drawable/arrow_back" />

            <com.pujexx.mlibraryuad.custom.TextViewHelvetica
                android:id="@+id/register_back_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textColor="#fff"
                android:textSize="10pt" />


        </LinearLayout>

    </FrameLayout>

</LinearLayout>
